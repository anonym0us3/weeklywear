<div class="container forms">
  <h1 class="text-center info-banner center-block">Sign Up</h1>

  <%= form_for @user do |f| %>
  
    <div class="half center-block">
      <div class="form-group">
        <%= f.label(:username, "Username") %>
        <%= f.text_field :username, placeholder: "Username", :required => true, class: "form-control", :autofocus=>true %>
      </div>
      <div class="form-group">
        <%= f.label(:email, "Email") %>
        <%= f.email_field :email, placeholder: "Email", :required => true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label(:password, "Password") %>
        <%= f.password_field :password, placeholder: "Password", :required => true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label(:avatar, "Upload an avatar") %>
        <%= f.file_field :avatar %>
      </div>

      <br>

      <%= f.submit "Sign Up", class: "btn btn-default center-block" %>

      <br>
      <p>Already a current user? Click <a href="/login">here</a> to login!</p>

    </div>
  <% end %>
</div>